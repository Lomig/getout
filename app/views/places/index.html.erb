<%= render 'components/back_arrow', link: root_path %>
<div class="index-container">
  <div class="tabs-search">
    <ul class="nav nav-pills">
      <li class="nav-item">
        <a class="nav-link" href="#">By genres</a>
      </li>
      <li class="nav-item">
        <a class="nav-link selected" href="#">By location</a>
      </li>
    </ul>
  </div>
  <div class="bar-search">
    Search
  </div>
  <div class="display-search">
    <ul class="nav nav-pills">
      <li class="nav-item">
        <a class="nav-link selected" href="#">List</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Map</a>
      </li>
    </ul>
  </div>
  <div class="search-results mb-3">
    <div class="title-section">
      <h3>Results for <%= @query %></h3>
    </div>
    <div class="places">
      <% @places.each do |place| %>
        <%= render "components/search-card", place: place %>
      <% end %>
    </div>
  </div>
</div>


