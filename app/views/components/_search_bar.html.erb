 <!-- render "components/search_bar", value: "Value" -->

 <% 
     value = local_assigns.fetch(:value, "")
 %>

<div class="search-bar-container">
  <div class="search-bar">
    <form action="/places" id="search-form" method="get" accept-charset="utf-8">
      <div class="search-bar-all" data-controller="places-search">
        <%= icon("fas", "search") %>
        <input class="search-bar-input"
               type="search"
               placeholder="Enter an address..."
               data-target="places-search.input"
               name="query"
               id="search_query" 
               value="<%= value %>"
               >
      </div>
    </form>
  </div>
</div>
